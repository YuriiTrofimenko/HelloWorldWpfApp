<Window x:Class="HelloWorldWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button
            FontSize="36">
            <StackPanel>
                <TextBlock x:Name="ButtonHeader">Text</TextBlock>
                <ListBox x:Name="MyItems" SelectionChanged="MyItems_SelectionChanged">
                    <ListBoxItem>1</ListBoxItem>
                    <ListBoxItem>2</ListBoxItem>
                </ListBox>
                <RadioButton FontSize="14">Click Me</RadioButton>
                <Rectangle Width="25" Height="25" Fill="Black"></Rectangle>
            </StackPanel>
        </Button>
    </Grid>
</Window>
